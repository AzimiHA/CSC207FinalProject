<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UndoRemoveItem">

    <TextView
        android:id="@+id/undoRemoveItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/undoRemoveItem"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/undoRemoveItemDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/undoRemoveItem"
        android:layout_centerHorizontal="true"
        android:text="@string/undoTradeDescription" />

    <ListView
        android:layout_below="@+id/undoRemoveItemDescription"
        android:layout_marginTop="10dp"
        android:id="@+id/removedItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <FrameLayout
        android:id="@+id/undoRemoveItem_container"
        android:name="com.example.phase2.UndoFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_undo" />

</RelativeLayout>