<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllTradersMenu">

    <TextView
        android:id="@+id/allTraders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/allTraders"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/allTradersDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/allTraders"
        android:layout_centerHorizontal="true"
        android:text="@string/freezeTraders" />



    <ListView
        android:layout_below="@+id/allTradersDescription"
        android:layout_marginTop="10dp"
        android:id="@+id/freezeTrader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <FrameLayout
        android:id="@+id/fragment_freeze_container"
        android:name="com.example.phase2.FreezeFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_freeze" />



</RelativeLayout>