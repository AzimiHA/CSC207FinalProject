<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TutorialActivity">

    <TextView
        android:id="@+id/prompt"
        android:layout_width="372dp"
        android:layout_height="59dp"
        android:layout_marginTop="36dp"
        android:text="Welcome to the tutorial. Press any button for more information."
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/browseTradesButton"
        android:layout_width="156dp"
        android:layout_height="104dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:onClick="onBrowseTrades"
        android:text="@string/trader_option2"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/browseItemsButton"
        app:layout_constraintTop_toBottomOf="@+id/prompt" />

    <Button
        android:id="@+id/editWishListButton"
        android:layout_width="156dp"
        android:layout_height="104dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:onClick="onEditWishList"
        android:text="@string/trader_option4"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/editInventoryButton"
        app:layout_constraintTop_toBottomOf="@+id/browseTradesButton" />

    <Button
        android:id="@+id/autoTradeButton"
        android:layout_width="156dp"
        android:layout_height="104dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:onClick="onAutoTrade"
        android:text="@string/trader_option5"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editInventoryButton" />

    <Button
        android:id="@+id/viewInfoButton"
        android:layout_width="156dp"
        android:layout_height="104dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:onClick="onViewInfo"
        android:text="@string/trader_option6"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/autoTradeButton"
        app:layout_constraintTop_toBottomOf="@+id/editWishListButton" />

    <Button
        android:id="@+id/changePassButton"
        android:layout_width="156dp"
        android:layout_height="104dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:onClick="onChangePassword"
        android:text="@string/change_password"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/requestUnfreezeButton"
        app:layout_constraintTop_toBottomOf="@+id/viewInfoButton" />

    <Button
        android:id="@+id/requestUnfreezeButton"
        android:layout_width="156dp"
        android:layout_height="104dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:onClick="onRequestUnfreeze"
        android:text="@string/trader_option7"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/autoTradeButton" />

    <Button
        android:id="@+id/browseItemsButton"
        android:layout_width="156dp"
        android:layout_height="104dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:onClick="onBrowseItems"
        android:text="@string/trader_option1"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prompt" />

    <Button
        android:id="@+id/editInventoryButton"
        android:layout_width="156dp"
        android:layout_height="104dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:onClick="onEditInventory"
        android:text="@string/trader_option3"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/browseItemsButton" />

</androidx.constraintlayout.widget.ConstraintLayout>