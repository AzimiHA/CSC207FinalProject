<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TraderActivity">

    <Button
        android:id="@+id/button21"
        android:layout_width="156dp"
        android:layout_height="104dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="20dp"
        android:onClick="browseAvailableItems"
        android:text="@string/trader_option1"
        app:layout_constraintBottom_toTopOf="@+id/button24"
        app:layout_constraintEnd_toStartOf="@+id/button23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button24"
        android:layout_width="156dp"
        android:layout_height="104dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="20dp"
        android:onClick="editInventory"
        android:text="@string/trader_option3"
        app:layout_constraintBottom_toTopOf="@+id/button28"
        app:layout_constraintEnd_toStartOf="@+id/button25"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button28"
        android:layout_width="156dp"
        android:layout_height="104dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="20dp"
        android:onClick="automaticTradeSuggestion"
        android:text="@string/trader_option5"
        app:layout_constraintBottom_toTopOf="@+id/button29"
        app:layout_constraintEnd_toStartOf="@+id/button26"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button29"
        android:layout_width="156dp"
        android:layout_height="104dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="17dp"
        android:onClick="requestToUnfreeze"
        android:text="@string/trader_option7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button27"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button23"
        android:layout_width="156dp"
        android:layout_height="104dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:onClick="browseOnGoingTrades"
        android:text="@string/trader_option2"
        app:layout_constraintBottom_toTopOf="@+id/button25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button21"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button25"
        android:layout_width="156dp"
        android:layout_height="104dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:onClick="editWishlist"
        android:text="@string/trader_option4"
        app:layout_constraintBottom_toTopOf="@+id/button26"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button24" />

    <Button
        android:id="@+id/button26"
        android:layout_width="156dp"
        android:layout_height="104dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:onClick="viewUserInfo"
        android:text="@string/trader_option6"
        app:layout_constraintBottom_toTopOf="@+id/button27"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button28" />

    <Button
        android:id="@+id/button27"
        android:layout_width="156dp"
        android:layout_height="104dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="16dp"
        android:onClick="changeTraderPassword"
        android:text="@string/change_password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button29" />

    <TextView
        android:id="@+id/welcomTraderTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Username"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.172"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.077" />

</androidx.constraintlayout.widget.ConstraintLayout>