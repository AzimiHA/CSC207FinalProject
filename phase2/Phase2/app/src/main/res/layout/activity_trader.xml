<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TraderActivity">

    <Button
        android:id="@+id/button21"
        android:layout_width="156dp"
        android:layout_height="104dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="19dp"
        android:onClick="browseAvailableItems"
        android:text="@string/trader_option1"
        android:textSize="21sp"
        app:layout_constraintEnd_toStartOf="@+id/button23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomTraderTv" />

    <Button
        android:id="@+id/button24"
        android:layout_width="156dp"
        android:layout_height="104dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="19dp"
        android:onClick="editInventory"
        android:text="@string/trader_option3"
        android:textSize="21sp"
        app:layout_constraintEnd_toStartOf="@+id/button25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button21" />

    <Button
        android:id="@+id/button29"
        android:layout_width="156dp"
        android:layout_height="104dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:onClick="requestAdmin"
        android:text="@string/trader_option7"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button24" />

    <Button
        android:id="@+id/button23"
        android:layout_width="156dp"
        android:layout_height="104dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:onClick="browseOnGoingTrades"
        android:text="@string/trader_option2"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button21"
        app:layout_constraintTop_toBottomOf="@+id/welcomTraderTv" />

    <Button
        android:id="@+id/button25"
        android:layout_width="156dp"
        android:layout_height="104dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:onClick="editWishlist"
        android:text="@string/trader_option4"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button24"
        app:layout_constraintTop_toBottomOf="@+id/button23" />

    <Button
        android:id="@+id/button26"
        android:layout_width="156dp"
        android:layout_height="104dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:onClick="viewUserInfo"
        android:text="@string/trader_option6"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toEndOf="@+id/button29"
        app:layout_constraintTop_toBottomOf="@+id/button25"
        tools:layout_constraintStart_toEndOf="@id/button29" />

    <Button
        android:id="@+id/button27"
        android:layout_width="156dp"
        android:layout_height="104dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="48dp"
        android:onClick="changeTraderPassword"
        android:text="@string/change_password"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button26"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/welcomTraderTv"
        android:layout_width="108dp"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:text="@string/welcome"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBaseline_toBaselineOf="@+id/welcomTraderTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="93dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:onClick="onLogoutClicked"
        android:text="@string/log_out"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>