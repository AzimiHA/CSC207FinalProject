<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".undoAgreeTrade">

    <TextView
        android:id="@+id/undoAgreeTrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/undoAgreeTrade"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/undoAgreeTradeDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/undoAgreeTrade"
        android:layout_centerHorizontal="true"
        android:text="@string/undoTradeDescription" />

    <ListView
        android:layout_below="@+id/undoAgreeTradeDescription"
        android:layout_marginTop="10dp"
        android:id="@+id/agreedTrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <FrameLayout
        android:id="@+id/undoAgreeTrade_container"
        android:name="com.example.phase2.undoFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_undo" />

</RelativeLayout>