<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".traderinfo.EditInventoryActivity">

    <TextView
        android:id="@+id/yourInventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/yourInventory"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/yourInventoryPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yourInventory"
        android:layout_centerHorizontal="true"
        android:text="@string/select_view_item" />

    <ListView
        android:id="@+id/inventoryList"
        android:layout_width="match_parent"
        android:layout_height="515dp"
        android:layout_below="@+id/yourInventoryPrompt" />

    <Button
        android:id="@+id/addNewItemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inventoryList"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:onClick="addNewItem"
        android:text="@string/add_new_item"/>
</RelativeLayout>