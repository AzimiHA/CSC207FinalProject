<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemOptionsActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="287dp"
        android:layout_height="92dp"
        android:layout_marginTop="32dp"
        android:text="@string/itemChoiceMenu"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addToWishlistButton"
        android:layout_width="225dp"
        android:layout_height="110dp"
        android:layout_marginTop="112dp"
        android:onClick="addToWishList"
        android:text="@string/addToWishlist"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/ProposeTradeButton"
        android:layout_width="225dp"
        android:layout_height="110dp"
        android:layout_marginTop="120dp"
        android:onClick="proposeTrade"
        android:text="@string/proposeTrade"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addToWishlistButton" />

</androidx.constraintlayout.widget.ConstraintLayout>