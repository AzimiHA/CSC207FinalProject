<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestedUnfrozenMenu">

    <TextView
        android:id="@+id/unfreezeRequests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/unfreezeRequest"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/unfreezeDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unfreezeRequests"
        android:layout_centerHorizontal="true"
        android:text="@string/unfreezeChoice" />



    <ListView
        android:layout_below="@+id/unfreezeDescription"
        android:layout_marginTop="10dp"
        android:id="@+id/unfreeze"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <FrameLayout
        android:id="@+id/fragment_unfreeze_container"
        android:name="com.example.phase2.FreezeFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_unfreeze" />



</RelativeLayout>